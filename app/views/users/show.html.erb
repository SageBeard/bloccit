<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
        <div class="media-left">

          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"><%= @user.name %></h2>
        <small>
          <%= pluralize(@user.posts.count, 'post') %>,
          <%= pluralize(@user.comments.count, 'comment') %>
        </small>
      </div>
    </div>
  </div>
</div>
    <% if @user.posts.empty? %>
      <p><%= @user.name %> has not submitted posts</p>
    <% else %>
      <%= render @user.posts %>
      <%= render @user.favorite_for(post) %>
      <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.name %> <%= image_tag avatar_url, class: 'media-object' %><br>
    <% end %>
    <% if @user.comments.empty? %>
      <p><%= @user.name %> has not submitted comments</p>
    <% else %>
      <%= render @user.comments %>
    <% end %>
